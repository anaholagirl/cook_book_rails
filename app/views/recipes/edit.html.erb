<h1> Edit Recipe</h1>

<%= render('layouts/errors', :object => @recipe) %>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%=render('form') %>
  <button class="btn btn-success"> Update Recipe </button>
</form>



<p><a href="/recipes/<%= @recipe.id %>"
    data-confirm="You sure?"
    data-method="delete"
    rel="nofollow" class=" btn btn-warning">Delete This Recipe</a></p>
<p><a href="/recipes" class="btn btn-primary">Return to recipe listing </a><p>

