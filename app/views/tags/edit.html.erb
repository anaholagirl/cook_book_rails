<h1> Edit Tag</h1>

<%= render('layouts/errors', :object => @tag) %>

<form action="/tags/<%= @tag.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%=render('form') %>
  <button class="btn btn-success"> Update Tag </button>
</form>



<p><a href="/tags/<%= @tag.id %>"
    data-confirm="You sure?"
    data-method="delete"
    rel="nofollow" class=" btn btn-warning">Delete This Tag</a></p>
<p><a href="/tags" class="btn btn-primary">Return to tag listing </a><p>
